#include<iostream>

using namespace std;

struct person{
    string name;
    int age;
    float salary;
};

int main(){

    person p1;
    char ch;

    do{
    cout<<"Enter the name of person : ";
    cin>>p1.name;
    cout << "Enter age: ";
    cin >> p1.age;
    cout << "Enter salary: ";
    cin >> p1.salary;

    cout<<endl;
    cout << "Name: " << p1.name << endl;
    cout << "Age: " <<p1.age << endl;
    cout << "Salary: " <<p1.salary << endl;
    cout<<endl<<endl;

    cout<<"Do you want to do again?";
    cin>>ch;
    cout<<endl<<endl;
    }while(ch == 'y' || ch == 'Y');

    return 0;
}
