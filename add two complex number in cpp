#include<iostream.h>
#include<conio.h>
using namespace std;
class comp{
int x,y;
public:
comp(int a){
x=a;y=a;
}
comp(int a,int b){
x=a;y=b;
}
void add(comp c1,comp c2){
x = c1.x+c2.x;
y = c1.y+c2.y;
}
void show(){
cout<<x<<"+i"<<y<<"\n";
//cout<<"\na = "<<a<<"\nb = "<<b;
}};
void main(){
comp a(3,5);
comp b(4);
comp c(0);
c.add(a,b);
clrscr();
a.show();
b.show();
c.show();
getch();
}

