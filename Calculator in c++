#include<iostream>
using namespace std;

main(){
    int var1,var2,var3;

    cout<<"Enter the first value";
    cin>>var1;
    cout<<endl<<"Enter the second value";
    cin>>var2;

    char decision;

    cout<<endl<<"Enter the Decision ";
    cin>>decision;

    switch(decision){
        case '+':
            //var3 =
            cout<<var1+var2;;
            break;

        case '-':
            var3 = var1-var2;
            cout<<var3;
            break;

        case '*':
            var3 = var1*var2;
            cout<<var3;
            break;

        case '/':
            var3 = var1/var2;
            cout<<var3;
            break;

        default:
            cout<<"Invalid...";

    }

}
